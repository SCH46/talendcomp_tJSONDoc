<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER 
		AUTHOR="cimt AG" 
		COMPATIBILITY="ALL"
		PLATEFORM="ALL" 
		RELEASE_DATE="20160827"
		SERIAL="" 
		STARTABLE="true" 
		STATUS="PROD" 
		VERSION="4.5">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>JSON</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="0" MAX_INPUT="0"
			MIN_OUTPUT="0" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER 
			NAME="FILENAME" 
			FIELD="FILE" 
			REQUIRED="true" 
			NUM_ROW="10"
		>
			<DEFAULT>"/path/to/large_input_file.json"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="LOOP_PATH" 
			FIELD="TEXT" 
			REQUIRED="true" 
			NUM_ROW="20"
		>
			<DEFAULT>"$[*]"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="COLUMN_CONFIG" 
			FIELD="TABLE" 
			NUM_ROW="30" 
			NB_LINES="10" >
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="JSON_PATH" FIELD="TEXT" />
				<ITEM NAME="USE" FIELD="CHECK" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER 
			NAME="SCHEMA" 
			FIELD="SCHEMA_TYPE" 
			REQUIRED="false" 
			NUM_ROW="50">
			<DEFAULT />
		</PARAMETER>

	</PARAMETERS>
	
	<ADVANCED_PARAMETERS>
		
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="cimt-talendcomp-json" MODULE="cimt-talendcomp-json-5.0.jar" REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>
	
	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer" />
		<RETURN AVAILABILITY="AFTER" NAME="CURRENT_NODE" TYPE="id_Object" />
	</RETURNS>
	
</COMPONENT>
