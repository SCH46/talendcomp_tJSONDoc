<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER 
		AUTHOR="cimt AG" 
		COMPATIBILITY="ALL"
		PLATEFORM="ALL" 
		RELEASE_DATE="20160827"
		SERIAL="" 
		STARTABLE="false" 
		STATUS="PROD" 
		VERSION="4.5">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>JSON</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="0" MAX_INPUT="1"
			MIN_OUTPUT="0" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER 
			NAME="JSON_DOCUMENT" 
			FIELD="COMPONENT_LIST" 
			NUM_ROW="10"
			FILTER="REGEXP:^(tJSONDocOutput|tJSONDocOpen|tJSONDocInput)(.)*"
			REQUIRED="true"
		/>

		<PARAMETER 
			NAME="PARENT_JSON_PATH" 
			FIELD="TEXT" 
			REQUIRED="true" 
			NUM_ROW="20"
		>
			<DEFAULT>"$"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			FIELD="CLOSED_LIST" 
			NAME="OUTPUT_STRUCTURE" 
			NUM_ROW="30" 
			REQUIRED="true"
		>
	    	<ITEMS DEFAULT="ARRAY_OF_OBJECTS">
	    		<ITEM NAME="ARRAY_OF_OBJECTS" VALUE="ARRAY_OF_OBJECTS" />
	    		<ITEM NAME="SINGLE_OBJECT" VALUE="SINGLE_OBJECT" />
	    		<ITEM NAME="ARRAY_OF_VALUES" VALUE="ARRAY_OF_VALUES" />
	    	</ITEMS>
		</PARAMETER>

		<PARAMETER 
			NAME="COLUMN_CONFIG" 
			FIELD="TABLE" 
			NUM_ROW="40" 
			NB_LINES="5" >
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="ATTRIBUTE_ALIAS" FIELD="TEXT" SHOW_IF="OUTPUT_STRUCTURE != 'ARRAY_OF_VALUES'" />
				<ITEM NAME="USE" FIELD="CHECK" />
				<ITEM NAME="IS_DOC" FIELD="CHECK" />
				<ITEM NAME="OMIT_ATTRIBUTE_IF_NULL" FIELD="CHECK" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER 
			NAME="SCHEMA" 
			FIELD="SCHEMA_TYPE" 
			REQUIRED="true" 
			NUM_ROW="50">
			<DEFAULT />
		</PARAMETER>

	</PARAMETERS>
	
	<ADVANCED_PARAMETERS>
		
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
	</CODEGENERATION>
	
	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer" />
		<RETURN AVAILABILITY="AFTER" NAME="CURRENT_NODE" TYPE="id_Object" />
		<RETURN AVAILABILITY="FLOW" NAME="CURRENT_PATH" TYPE="id_String" />
	</RETURNS>
	
</COMPONENT>
