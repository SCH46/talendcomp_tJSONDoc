<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER 
		AUTHOR="cimt AG" 
		COMPATIBILITY="ALL"
		SCHEMA_AUTO_PROPAGATE="true" 
		PLATEFORM="ALL" 
		RELEASE_DATE="20160527"
		SERIAL="" 
		STARTABLE="true" 
		STATUS="PROD" 
		VERSION="1.0">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>JSON</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="0" MAX_INPUT="1"
			MIN_OUTPUT="0" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER 
			NUM_ROW="20"
			FIELD="CHECK" 
			NAME="CREATE_EMPTY_DOCUMENT">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER 
			NUM_ROW="20"
			FIELD="CHECK" 
			NAME="ROOT_IS_ARRAY"
			SHOW_IF="CREATE_EMPTY_DOCUMENT == 'true'">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER 
			NUM_ROW="30"
			FIELD="CHECK" 
			NAME="READ_FROM_STRING"
			SHOW_IF="CREATE_EMPTY_DOCUMENT == 'false'">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
	    
	    <PARAMETER 
	    	NAME="JSON_CONTENT" 
	    	FIELD="MEMO" 
	    	NUM_ROW="40" 
	    	REQUIRED="true"
	    	SHOW_IF="(CREATE_EMPTY_DOCUMENT == 'false') and (READ_FROM_STRING == 'true')">
	    	<DEFAULT>"{}"</DEFAULT>
	    </PARAMETER> 
		
		<PARAMETER
			NUM_ROW="40"
			FIELD="FILE" 
			NAME="FILENAME" 
			REQUIRED="true" 
			REPOSITORY_VALUE="FILE_PATH" 
			SHOW_IF="(CREATE_EMPTY_DOCUMENT == 'false') and (READ_FROM_STRING == 'false')">
			<DEFAULT>"/path/to/input_file.json"</DEFAULT>
		</PARAMETER>

	</PARAMETERS>

	<ADVANCED_PARAMETERS>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="de.cimt.talendcomp.json" MODULE="de.cimt.talendcomp.json-1.0.jar" REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="ROOT_NODE" TYPE="id_Object" />
	</RETURNS>
</COMPONENT>
	