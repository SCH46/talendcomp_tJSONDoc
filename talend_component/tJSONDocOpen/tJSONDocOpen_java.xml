<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER 
		AUTHOR="cimt AG" 
		COMPATIBILITY="ALL"
		SCHEMA_AUTO_PROPAGATE="true" 
		PLATEFORM="ALL" 
		RELEASE_DATE="20160527"
		SERIAL="" 
		STARTABLE="true" 
		STATUS="PROD" 
		VERSION="3.1">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>JSON</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="0" MAX_INPUT="1"
			MIN_OUTPUT="0" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER 
			FIELD="CLOSED_LIST" 
			NAME="SETUP" 
			NUM_ROW="10" 
			REQUIRED="true"
		>
	    	<ITEMS DEFAULT="EMPTY_OBJECT">
	    		<ITEM NAME="EMPTY_OBJECT" VALUE="EMPTY_OBJECT" />
	    		<ITEM NAME="EMPTY_ARRAY" VALUE="EMPTY_ARRAY" />
	    		<ITEM NAME="READ_FROM_FLOW" VALUE="READ_FROM_FLOW" />
	    		<ITEM NAME="READ_FROM_FILE" VALUE="READ_FROM_FILE" />
	    		<ITEM NAME="READ_FROM_INPUT" VALUE="READ_FROM_INPUT" />
	    	</ITEMS>
		</PARAMETER>
		
	    <PARAMETER 
	    	NAME="CONTENT_IS_PLAIN_TEXT" 
	    	FIELD="CHECK" 
	    	NUM_ROW="30" 
	    	REQUIRED="true"
	    	SHOW_IF="SETUP == 'READ_FROM_INPUT'">
	    	<DEFAULT>false</DEFAULT>
	    </PARAMETER> 

	    <PARAMETER 
	    	NAME="JSON_CONTENT" 
	    	FIELD="MEMO" 
	    	NUM_ROW="40" 
	    	REQUIRED="true"
	    	SHOW_IF="SETUP == 'READ_FROM_INPUT'">
	    	<DEFAULT>"{}"</DEFAULT>
	    </PARAMETER> 
		
		<PARAMETER
			NUM_ROW="40"
			FIELD="FILE" 
			NAME="FILENAME" 
			REQUIRED="true" 
			REPOSITORY_VALUE="FILE_PATH" 
			SHOW_IF="SETUP == 'READ_FROM_FILE'"
		>
			<DEFAULT>"/path/to/input_file.json"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="JSON_INPUT_COLUMN" 
			FIELD="PREV_COLUMN_LIST"
			REQUIRED="true" 
			NUM_ROW="40"
			SHOW_IF="SETUP == 'READ_FROM_FLOW'"
		>
		</PARAMETER>
		
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="de.cimt.talendcomp.json" MODULE="de.cimt.talendcomp.json-3.1.jar" REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="ROOT_NODE" TYPE="id_Object" />
	</RETURNS>
</COMPONENT>
	