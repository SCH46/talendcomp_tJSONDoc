<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER 
		AUTHOR="cimt AG" 
		COMPATIBILITY="ALL"
		PLATEFORM="ALL" 
		RELEASE_DATE="20161010"
		SERIAL="" 
		STARTABLE="true" 
		STATUS="PROD" 
		VERSION="5.3">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>JSON</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="0" MAX_INPUT="0"
			MIN_OUTPUT="0" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER 
			NAME="JSON_DOCUMENT" 
			FIELD="COMPONENT_LIST" 
			NUM_ROW="10"
			FILTER="REGEXP:^(tJSONDocOpen|tJSONDocOutput|tJSONDocInput)(.)*"
			REQUIRED="true"
		/>

		<PARAMETER 
			NAME="USE_PARENT_AS_CURRENT_OBJECT" 
			FIELD="CHECK" 
			REQUIRED="true" 
			NUM_ROW="20"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="PARENT_JSON_PATH" 
			FIELD="TEXT" 
			REQUIRED="true" 
			NUM_ROW="20"
			SHOW_IF="USE_PARENT_AS_CURRENT_OBJECT == 'false'"
		>
			<DEFAULT>"$"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="DIE_IF_PARENT_JSON_PATH_DOES_NOT_EXISTS" 
			FIELD="CHECK" 
			REQUIRED="true" 
			NUM_ROW="22"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="DIE_IF_PARENT_JSON_OBJECT_IS_EMPTY" 
			FIELD="CHECK" 
			REQUIRED="true" 
			NUM_ROW="22"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="COLUMN_CONFIG" 
			FIELD="TABLE" 
			NUM_ROW="40" 
			NB_LINES="10" >
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="ATTRIBUTE_ALIAS" FIELD="TEXT" />
				<ITEM NAME="USE" FIELD="CHECK" />
				<ITEM NAME="MISSING_ATTRIBUTE_ALLOWED" FIELD="CHECK" />
				<ITEM NAME="MISSING_ATTRIBUTE_REPLACEMENT" FIELD="TEXT" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER 
			NAME="SCHEMA" 
			FIELD="SCHEMA_TYPE" 
			REQUIRED="false" 
			NUM_ROW="50">
			<DEFAULT />
		</PARAMETER>

	</PARAMETERS>
	
	<ADVANCED_PARAMETERS>
		
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
	</CODEGENERATION>
	
	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer" />
		<RETURN AVAILABILITY="AFTER" NAME="CURRENT_NODE" TYPE="id_Object" />
		<RETURN AVAILABILITY="FLOW" NAME="CURRENT_PATH" TYPE="id_String" />
		<RETURN AVAILABILITY="FLOW" NAME="PARENT_ATTRIBUTE_EXISTS" TYPE="id_Boolean" />
		<RETURN AVAILABILITY="FLOW" NAME="NB_NOT_NULL_ATTRIBUTES" TYPE="id_Integer" />
	</RETURNS>
	
</COMPONENT>
